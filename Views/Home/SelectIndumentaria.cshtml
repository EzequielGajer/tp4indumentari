@{
    ViewData["Title"] = "SelectIndumentaria";
}

<h1>Crear Indumentaria</h1>

<form asp-controller="Home" asp-action="GuardarIndumentaria" method="post">
    <div class="equipos-menu">
        <label for="equipo">Equipo:</label>
        <select id="equipo" name="equipo">
            @for (var i = 0; i < ViewBag.ListaEquipos.Count; i++)
            {
                <option value="@i">@ViewBag.ListaEquipos[i]</option>
            }
        </select>
    </div>

    <p>Medias</p>
    <div class="div-medias">
        
        
        @for (var i = 0; i < ViewBag.ListaMedias.Count; i++)
        {
            <div class="medias">
                <img src="~/imagenes/@ViewBag.ListaMedias[i]" alt="Medias">
                <input type="radio" id="media" name="media" value="@i">
            </div>
        }
    </div>

    <p>Pantalones</p>
    <div class="div-pantalones">
        
        @for (var i = 0; i < ViewBag.ListaPantalones.Count; i++)
